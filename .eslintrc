{
  "extends": [
    "eslint-config-airbnb"
  ],
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "ecmaFeatures": {
    "jsx": true
  },
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "babel",
  ],
  "rules": {
    "generator-star-spacing": 0,
    "no-plusplus": 0,
    "require-yield": 0,
    "react/require-extension": "off",
    "constructor-super": 2,
    "comma-dangle": [2, "always-multiline"],
    "eqeqeq": [
      2,
      "allow-null"
    ],
    "id-length": 0,
    "max-len": [
      2,
      120,
      4
    ],
    "no-eq-null": 0,
    "one-var": [
      2,
      {
        "initialized": "never"
      }
    ],
    "new-cap": 0,
    "prefer-template": 0,
    "prefer-const": 0,
    "no-param-reassign": 0,
    "no-use-before-define": 0,
    "no-this-before-super": 2,
    "import/no-extraneous-dependencies": 0,
    "babel/array-bracket-spacing": 1,
    "babel/flow-object-type": 1,
    "react/prefer-stateless-function": 1,
    "react/jsx-filename-extension": 0,
    "react/jsx-boolean-value": 2,
    "react/jsx-space-before-closing": [
      2,
      "never"
    ],
    "react/jsx-no-duplicate-props": 2,
    "react/sort-comp": 0,
    "react/prop-types": [
      2,
      {
        "ignore": [
          "children",
          "className",
          "style",
          "bsStyle",
          "bsClass",
          "bsSize"
        ]
      }
    ],
    "spaced-comment": [
      2,
      "always",
      {
        "line": {
          "exceptions": [
            "*"
          ]
        }
      }
    ],
  }
}
